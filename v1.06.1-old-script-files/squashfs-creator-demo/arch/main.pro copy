# Project name
TARGET = SquashFS_Creator

# Define the sources
SOURCES += main.cpp

# Define the libraries to link against
LIBS += -lstdc++fs \
        -L/usr/lib -lQt6Gui -lGLX -lOpenGL -lQt6Core -lpthread

# Define the include paths
INCLUDEPATH += /usr/include/qt6 \
               /usr/include/qt6/QtGui \
               /usr/include/qt6/QtCore

# Define the linker flags
QMAKE_LFLAGS += -Wl,-O1 -Wl,-rpath,/usr/lib -Wl,-rpath-link,/usr/lib

# Define the target output path
DESTDIR = $$PWD

# Define the target name
TARGET = SquashFS_Creatorlll

# Define the build steps
TEMPLATE = app

# Define the build configuration
CONFIG += c++17

# Define the clean step
clean.commands = rm -f $$DESTDIR/$$TARGET

# Define the build and clean targets
QMAKE_EXTRA_TARGETS += clean
