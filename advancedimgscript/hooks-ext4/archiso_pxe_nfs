# vim: set ft=sh:

run_hook() {
    if [[ -n "${ip}" && -n "${arch_nfs_srv}" ]]; then

        arch_nfs_srv=$(eval echo ${arch_nfs_srv})
        [[ -n "${arch_nfs_opt}" ]] && arch_nfs_opt="-o ${arch_nfs_opt}"

        mount_handler="arch_nfs_mount_handler"
    fi
}

arch_nfs_mount_handler() {
    newroot="${1}"
    mkdir -p "/run/arch/bootmnt"
    msg ":: Mounting '${arch_nfs_srv}'"
    # Do not put "${arch_nfs_opt}" nfsmount fails!
    if ! nfsmount ${arch_nfs_opt} "${arch_nfs_srv}" "/run/arch/bootmnt"; then
        echo "ERROR: Mounting '${arch_nfs_srv}'"
        echo "   Falling back to interactive prompt"
        echo "   You can try to fix the problem manually, log out when you are finished"
        launch_interactive_shell
    fi

    if [[ "${copytoram}" != "n" ]]; then
        copytoram="y"
    fi

    arch_mount_handler ${newroot}
}
